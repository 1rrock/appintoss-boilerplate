{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/client/*": [
        "./src/client/*"
      ],
      "@/server/*": [
        "./src/server/*"
      ],
      "@/domains/*": [
        "./src/client/domains/*"
      ],
      "@/shared/*": [
        "./src/client/shared/*"
      ],
      "@/ui/*": [
        "./src/client/shared/ui/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.setup.ts",
    "jest.config.ts"
  ]
}
